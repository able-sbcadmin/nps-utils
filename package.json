  "keywords": [
    "nps",
    "nps-utils"
  ],
  "author": "Gowrav Shekar",
  "license": "MIT",
  "dependencies": {
    "any-shell-escape": "^0.1.1",
    "concurrently": "^7.3.0",
    "cpy-cli": "^4.1.0",
    "cross-env": "^7.0.3",
    "is-docker": "^2.2.1",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@markforged/nps": "5.11.2",
    "@types/jest": "28.1.8",
    "@types/node": "^18.7.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
